<!DOCTYPE html>
<html>
<head>
  <title>Flight Log</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
  <%= google_maps_api %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap.min" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id = "wrapper">

		<div id = "header">
			<div id="logobox">
				<% if current_user %>
					<!--<%= image_tag current_user.company.image_url(:thumb).to_s%>-->
				<% end %>
				<img src="http://www.woodscan.co/img/SPlogo.jpg">
			</div>
			<div id ="titlebox">
				<div class="largeheading"><%= yield(:title) %></div>
				<div class="smallheading"><%= yield(:smalltitle) %></div>
			</div>
			<div id="adminbox">
				<% if current_user %>
					<%= link_to 'Admin', static_pages_admin_path, class: "btn btn-small btn-inverse" %>
					<%= link_to 'Logout', logout_path, class: "btn btn-small btn-inverse" %>
				<% end %>
			</div>
		</div>
		<% if current_user %>
			<div id="navigationbar">
				<nav class="navbar navbar-default" role="navigation">
					<div class="navbar-header">
						<ul class="nav nav-pills">

						  <li class="dropdown">
					        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sessions <b class="caret"></b></a>
					        <ul class="dropdown-menu">
					          <li><%= link_to 'New', new_session_path %></li>
					          <li><%= link_to 'Index', sessions_path %></li>
					        </ul>
					      </li>

					      <li class="dropdown">
					        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Batteries <b class="caret"></b></a>
					        <ul class="dropdown-menu">
					          <li><%= link_to 'New record', new_batterycharge_path %></li>
					          <li><%= link_to 'Charge index', batterycharges_path %></li>
					          <li><%= link_to 'New battery', new_battery_path %></li>
					          <li><%= link_to 'Battery index', batteries_path %></li>
					        </ul>
					      </li>

					      <li class="dropdown">
					        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Fit for Work <b class="caret"></b></a>
					        <ul class="dropdown-menu">
					          <li><%= link_to 'New record', new_pilot_fitness_file_path %></li>
					          <li><%= link_to 'Index', pilot_fitness_files_path %></li>
					        </ul>
					      </li>

					      <li class="dropdown">
					        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Incidents <b class="caret"></b></a>
					        <ul class="dropdown-menu">
					          <li><%= link_to 'Index', incidents_path %></li>
					        </ul>
					      </li>
					      
					      <% if current_user.admin == true %>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Pilots <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><%= link_to 'New', new_pilot_path %></li>
									<li><%= link_to 'Index', pilots_path %></li>
								</ul>
							</li>

							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Users <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><%= link_to 'New', new_user_path %></li>
								  	<li><%= link_to 'Index', users_path %></li>
								</ul>
							</li>

							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Statistics <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><%= link_to 'General', static_pages_statistics_path %></li>
								</ul>
							</li>

					      <% end %>

						</ul> <!--End of Nav -->
					</div>
				</nav>
			</div>
		<% end %>
			

		<div id="mainsection">
      <%= yield %>
		</div>

		<div style="clear:both;"></div>

	</div>


</body>
</html>
