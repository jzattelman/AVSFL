<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Battery</th>
			<th>Flights</th>
			<th>Charges</th>
			<th>Hours</th>
		</tr>
	</thead>
	<tbody>
		<% batteries.each do | battery | %>
			<tr>
				<td><%= battery.code %></td>
				<td><%= battery.flights.count %></td>
				<td><%= battery.batterycharges.count %></td>
				<td><%= number_with_precision(battery.flights.sum("total_flight_time"), :precision => 2) %></td>
			</tr>
		<% end %>
	</tbody>
</table>