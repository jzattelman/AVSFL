<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Platform</th>
			<th>Flights</th>
			<th>Hours</th>
			<th>Last Flown</th>

		</tr>
	</thead>
	<tbody>

		<% platforms.each do | platform | %>
			<tr>
				
				<td><%= platform.name %></td>
				<% if platform.flightcount > 0 %>
					<td><%= platform.flightcount %></td>
					<td><%= number_with_precision(platform.flighttime, :precision => 2) %></td>
					<td><%= "#{platform.lastflightdate.day}-#{platform.lastflightdate.month}-#{platform.lastflightdate.year}" %></td>
				<% else %>
					<td>0</td>
					<td>0</td>
					<td>None</td>
				<% end %>

			</tr>
		<% end %>
	</tbody>
</table>

