<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Platform</th>
			<th>No. of Flights</th>
			<th>Hours of flying</th>
		</tr>
	</thead>
	<tbody>
		<% platforms.each do | platform | %>
			<tr>
				<td><%= platform.name %></td>
				<td><%= platform.flightcount %></td>
				<td><%= number_with_precision(platform.flighttime, :precision => 2) %></td>
			</tr>
		<% end %>
	</tbody>
</table>