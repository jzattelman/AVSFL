<% provide(:title, "Pilots")%>

<% content_for :nav do %>
    <%= link_to 'Main Menu', static_pages_home_path %>
    <%= link_to 'New Pilot', new_pilot_path %>
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Arn</th>
    <th>Uav certified</th>
    <th width="120"></th>
  </tr>

<% @pilots.each do |pilot| %>
  <tr>
    <td><%= pilot.first_name %></td>
    <td><%= pilot.last_name %></td>
    <td><%= pilot.arn %></td>
    <td><%= pilot.uav_certified %></td>
    <!--<td><%= link_to 'Show', pilot %></td>-->
    <td><%= link_to 'Edit', edit_pilot_path(pilot), class: "btn btn-small btn-inverse" %>
        <%= link_to 'Delete', pilot, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>
<br />
