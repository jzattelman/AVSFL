<% if sessions.count > 0 %>
  <table class="table table-striped table-bordered">
        <tr>
          <th><%= sortable "date" %></th>
          <th><%= sortable "location" %></th>
          <th><%= sortable "client" %></th>
          <th><%= sortable "remote_pilot_id", "Pilot" %></th>
          <th width="180"></th>
        </tr>

      <% sessions.each do |session| %>
        <tr>
          <td><%= session.date.strftime("%e %B, %Y") %></td>
          <td><%= session.location %></td>
          <td><%= session.client %></td>
          <td><%= Pilot.find(session.remote_pilot_id).last_name %></td>
          <td><%= link_to 'Show', session, class: "btn btn-small btn-inverse" %>
              <%= link_to 'Edit', edit_session_path(session), class: "btn btn-small btn-inverse" %>
              <%= link_to 'Delete', session, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-small btn-danger" %></td>
        </tr>
      <% end %>
  </table>

<% else %>
  <h3>No sessions to display</h3>
<% end %>