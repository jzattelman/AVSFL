<% provide(:title, "Incidents")%>

<% content_for :nav do %>
    <%= link_to 'Main Menu', static_pages_home_path %>
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th>Date</th>
    <th>location</th>
    <th width="180"></th>
  </tr>

<% @incidents.each do |incident| %>
  <tr>
    <td><%= incident.incident_date.strftime("%e %B, %Y") %></td>
    <td><%= incident.location %></td>
    <td><%= link_to 'Show', incident, class: "btn btn-small btn-inverse"%>
        <%= link_to 'Edit', edit_incident_path(incident), class: "btn btn-small btn-inverse" %>
        <%= link_to 'Delete', incident, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

