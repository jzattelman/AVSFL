<% provide(:title, "Battery Charges")%>

<% content_for :nav do %>
    <%= link_to 'Main Menu', static_pages_home_path %>
    <%= link_to 'New Battery Charge record', new_batterycharge_path %>
<% end %>

<table class="table table-striped table-bordered">  <tr>
    <th>Date</th>
    <th>Battery</th>
    <th>Status</th>
    <th>Before charge voltage</th>
    <th>After charge voltage</th>
    <th>End percentage</th>
    <th width="120"></th>
  </tr>

<% @batterycharges.each do |batterycharge| %>
  <% battery = Battery.find(batterycharge.battery_id) %>
  <tr>
    <td><%= batterycharge.date %></td>
    <td><%= battery.code %></td>
    <td><%= batterycharge.status %></td>
    <td><%= batterycharge.start_voltage_decimal %> V</td>
    <td><%= batterycharge.end_voltage %> V</td>
    <td><%= batterycharge.end_percentage %> %</td>
    <td><%= link_to 'Edit', edit_batterycharge_path(batterycharge), class: "btn btn-small btn-inverse" %>
        <%= link_to 'Delete', batterycharge, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

