- provide(:title, "Pilots")

- content_for :nav do
	= link_to 'Main Menu', static_pages_home_path
	= link_to 'New Flight Platform', new_flight_platform_path

%table{:class => "table table-striped table-bordered"}
	%tr
		%th Name
		%th Type
		%th{:width => "60"}
		%th{:width => "60"}
		%th{:width => "60"}

	- @flight_platforms.each do |flight_platform|
		%tr
			%td 
				= flight_platform.name
			%td 
				= flight_platform.platform_type
			%td 
				= link_to 'Show', flight_platform, class: "btn btn-small btn-inverse"
			%td 
				= link_to 'Edit', edit_flight_platform_path(flight_platform), class: "btn btn-small btn-inverse"
			%td 
				= link_to 'Delete', flight_platform, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger"

	%br
