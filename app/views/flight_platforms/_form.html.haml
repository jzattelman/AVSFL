= form_for @flight_platform do |f|
  - if @flight_platform.errors.any?
    #error_explanation
      %h2= "#{pluralize(@flight_platform.errors.count, "error")} prohibited this flight_platform from being saved:"
      %ul
        - @flight_platform.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :platform_type
    = f.text_field :platform_type       
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
